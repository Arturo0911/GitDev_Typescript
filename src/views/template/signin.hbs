<div class="container p-4">
    <div class="row">

        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h5 class="card-title">Ingreso</h5>
                </div>
                <div class="card-body text-left">
                    <form action="/aut/login" method="POST">
                        <div class="form-group">
                            <em><label for="InputUser">Usuario</label></em>
                            <input class="form-control" id="InputUser" type="text" placeholder="Usuario..." required
                                name="user">
                        </div>
                        <div class="form-group">
                            <em><label for="InputPass">Password</label></em>
                            <input class="form-control" id="InputPass" type="password" placeholder="Password..."
                                required name="password">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>